<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <ImageView
        style="@style/image"
        android:id="@+id/img_place_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:src="@drawable/ic_launcher_background"/>


    <TextView
        style="@style/placeText"
        android:id="@+id/txt_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_place_photo"
        tools:text="Um lugar qualquer" />

    <TextView
        android:id="@+id/txt_place_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/txt_place_name"
        android:layout_below="@id/txt_place_name"
        tools:text="Este Ã© um lugar qualquer que serve alguma coisa" />

    <RatingBar
        android:id="@+id/rating_bar_marks_place"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_place_photo"
        android:layout_alignStart="@id/txt_place_name"
        android:layout_marginTop="10dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3"
        android:stepSize="0.5"
       />

    <TextView
        style="@style/distance"
        android:id="@+id/txt_place_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_place_photo"
        tools:text="0.4 KM" />
</RelativeLayout>
