<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/teal_700"
    tools:context=".previsaoDoTempo"
    android:stretchColumns="1">

    <TableRow>
        <TextView
            android:text=""
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="50dp"/>
        <TextView
            android:text="Previsão do Tempo"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:paddingTop="50dp"
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="100dp"/>
        <TextView
            android:text=""
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="50dp" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Segunda-feira"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp"/>
        <ImageView
            app:srcCompat="@drawable/nublado"
            android:layout_width="100dp"
            android:layout_height="50dp"
            />
        <TextView
            android:text="20°/15°"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Terça-feira"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp"/>
        <ImageView
            app:srcCompat="@drawable/nublado"
            android:layout_width="100dp"
            android:layout_height="50dp"
            />
        <TextView
            android:text="18°/12º"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp" />
    </TableRow>
    <TableRow>
        <TextView
            android:text="Quarta-feira"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp"/>
        <ImageView
            app:srcCompat="@drawable/chuva"
            android:layout_width="100dp"
            android:layout_height="50dp"
            />
        <TextView
            android:text="15°/8°"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp" />
    </TableRow>
    <TableRow>
        <TextView
            android:text="Quinta-feira"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp"/>
        <ImageView
            app:srcCompat="@drawable/sol"
            android:layout_width="100dp"
            android:layout_height="50dp"
            />
        <TextView
            android:text="35°/27º"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Sexta-feira"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp"/>
        <ImageView
            app:srcCompat="@drawable/sol"
            android:layout_width="100dp"
            android:layout_height="50dp"
            />
        <TextView
            android:text="38°/27º"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp" />
    </TableRow>
    <TableRow>
        <TextView
            android:text="Sábado"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp"/>
        <ImageView
            app:srcCompat="@drawable/relampago"
            android:layout_width="100dp"
            android:layout_height="50dp"
            />
        <TextView
            android:text="17°/10º"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Domingo-feira"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp"/>
        <ImageView
            app:srcCompat="@drawable/brilhante"
            android:layout_width="100dp"
            android:layout_height="50dp"
            />
        <TextView
            android:text="21°/20º"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp" />
    </TableRow>

    <TableRow>
        <TextView
            android:text=""
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp"/>
        <TextView
            android:text=""
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="300dp" />
        <TextView
            android:text=""
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="25dp" />
    </TableRow>

</TableLayout>