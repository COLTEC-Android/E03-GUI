<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufmg.coltec.tp.e03_layout.NewsActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_noticia"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/subtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subtitulo"
        android:layout_below="@id/titulo"/>
    <TextView
        android:id="@+id/autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitulo"
        android:layout_alignParentEnd="true"
        android:text="@string/autor"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/corpo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/autor"
        android:text="@string/corpo"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/hora_noticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/corpo"
        android:layout_alignParentStart="true"
        android:text="@string/hora_noticia"
        android:layout_marginBottom="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hora_noticia">
        <ImageView
            android:id="@+id/foto_autor"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/estadao" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/site" />
    </LinearLayout>
</RelativeLayout>
