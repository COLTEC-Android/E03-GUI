<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufmg.coltec.tp.e03_layout.News">

    <View
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/titulo"
        android:textStyle="bold"
        android:layout_margin="3dp"
        android:text="Trump da mais uma declaração polêmica"
        android:textColor="@android:color/white"
        android:textSize="29dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/subtitulo"
        android:layout_below="@id/titulo"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="32dp"
        android:textSize="20dp"
        android:text="Presidente afirma que furacão Maria colocou alguns prédios de Porto Rico no lugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/autor"
        android:layout_below="@id/subtitulo"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="18dp"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rita Rezende"/>

    <TextView
        android:id="@+id/p1"
        android:gravity="left"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:text="Lorem ipsum malesuada velit ut suspendisse sem quis, aliquam fames tempus vel quam per lobortis, dapibus ad est faucibus porttitor nunc. suspendisse aenean quam sit eros nostra metus pulvinar cursus vel, cursus etiam quam purus et torquent rutrum ad blandit bibendum, dui curabitur taciti aliquam molestie accumsan eget neque. vehicula condimentum."
        android:layout_below="@id/autor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/p2"
        android:layout_marginLeft="3dp"
        android:gravity="left"
        android:text="Lorem ipsum malesuada velit ut suspendisse sem quis, aliquam fames tempus vel quam per lobortis, dapibus ad est faucibus porttitor nunc. suspendisse aenean quam sit eros nostra metus pulvinar cursus vel, cursus etiam quam purus et torquent rutrum ad blandit bibendum, dui curabitur taciti aliquam molestie accumsan eget neque. vehicula condimentum."
        android:layout_below="@id/p1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/horario"
        android:text="23/02 16:59"
        android:textStyle="italic"
        android:textSize="15dp"
        android:layout_marginRight="3dp"
        android:gravity="right"
        android:layout_below="@id/p2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/foto"
        android:layout_marginTop="20dp"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_below="@+id/horario"
        android:rotation="90"
        android:src="@drawable/autora" />
    <TextView
        android:id="@+id/email"
        android:layout_marginTop="50dp"
        android:text="Email: ritarezborges@gmail.com"
        android:layout_below="@id/horario"
        android:layout_toRightOf="@id/foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tel"
        android:text="55 31 928392839"
        android:layout_below="@id/email"
        android:layout_toRightOf="@id/foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
