<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufmg.coltec.tp.e03_layout.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explorando os Layouts"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SplashScreen"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:id="@+id/btn_splash"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formulário"
        android:layout_below="@id/btn_splash"
        android:layout_alignLeft="@id/btn_splash"
        android:layout_alignRight="@id/btn_splash"
        android:id="@+id/btn_form"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previsão do Tempo"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/btn_splash"
        android:layout_marginLeft="30dp"
        android:id="@+id/btn_previsao"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notícia"
        android:layout_below="@id/btn_previsao"
        android:layout_alignLeft="@id/btn_previsao"
        android:layout_alignRight="@id/btn_previsao"
        android:id="@+id/btn_noticia"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
