<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textura"
    tools:context="br.ufmg.coltec.tp.e03_layout.MainActivity">


    <Button
        android:id="@+id/noticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/previsao"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:text="Notícia" />

    <Button
        android:id="@+id/previsao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="129dp"
        android:text="Previsão do Tempo" />

    <Button
        android:id="@+id/formulario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/noticia"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp"
        android:text="Formulário" />

</RelativeLayout>
