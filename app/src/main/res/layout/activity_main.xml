<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufmg.coltec.tp.e03_layout.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:text="Selecione Activity" />

    <Button
        android:id="@+id/Splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginStart="42dp"
        android:layout_marginTop="66dp"
        android:text="SplashScreen" />

    <Button
        android:id="@+id/noticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Splash"
        android:layout_alignBottom="@+id/Splash"
        android:layout_marginStart="61dp"
        android:layout_toEndOf="@+id/Splash"
        android:text="NotÃ­cia" />

    <Button
        android:id="@+id/tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Splash"
        android:layout_below="@+id/Splash"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="37dp"
        android:text="Wheather" />

    <Button
        android:id="@+id/form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tempo"
        android:layout_alignBottom="@+id/tempo"
        android:layout_alignEnd="@+id/noticia"
        android:text="Formulario" />
</RelativeLayout>
